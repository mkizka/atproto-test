{
  "name": "typescript-template",
  "type": "module",
  "scripts": {
    "format": "prettier --write . && eslint --fix .",
    "prepare": "husky",
    "start": "dotenv -- tsx src/index.ts"
  },
  "dependencies": {
    "@atproto/api": "^0.12.2"
  },
  "devDependencies": {
    "@mkizka/eslint-config": "^4.1.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.12.7",
    "dotenv-cli": "^7.4.1",
    "eslint": "^9.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-pkg": "^0.18.1",
    "tsx": "^4.7.2"
  },
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg"
    ]
  }
}